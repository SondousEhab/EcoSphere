<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- شريط علوي (صور زخرفية) -->
    <ImageView
        android:id="@+id/bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/statusbar2"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/status_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ph2"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar_image"/>

    <ImageView
        android:id="@+id/vectorPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@id/bar_image"
        app:layout_constraintTop_toBottomOf="@id/bar_image"/>

    <!-- المحتوى الرئيسي -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- اسم التطبيق -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoSphere"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <!-- صورة البروفايل -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ph1"
                android:contentDescription="@null"
                android:layout_marginTop="18dp"/>

            <!-- اسم المستخدم -->
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1D4F00"
                android:layout_marginTop="8dp"/>

            <!-- عدد النقاط -->
            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points: 0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1D4F00"
                android:layout_marginTop="8dp"/>

            <!-- عنوان عدد التحديات المكتملة -->
            <TextView
                android:id="@+id/completedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed challenges:"
                android:textSize="20sp"
                android:textColor="#1D4F00"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"/>

            <!-- عدد التحديات المكتملة -->
            <TextView
                android:id="@+id/completedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1D4F00"
                android:layout_marginTop="4dp"/>

            <!-- التحديات المضافة للبروفايل -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileChallengesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <!-- زرار تسجيل الخروج -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Log out"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#E57373"
                app:cornerRadius="24dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
